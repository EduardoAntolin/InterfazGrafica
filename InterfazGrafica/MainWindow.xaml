<Window x:Class="InterfazGrafica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazGrafica"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!-- Los datos del tittle pueden ser modificados según el usuario indique-->

    <!-- Contenedor-->
    <StackPanel>
        <!-- Texto plano 
        
           Orden de margenes en el margin:
            Left, Top, Right, Bottom
        -->
        <TextBlock TextAlignment="Center" Margin="20,15,20,0">Correo: </TextBlock>
        <!--Caja pa´ introducir texto -->
        <TextBox  Margin="20,15,20,0"></TextBox>
        <!--Texto plano contraseña-->
        <TextBlock TextAlignment="Center" Margin="20,15,20,0">Contraseña:</TextBlock>
        <TextBox Margin="20,15,20,0"></TextBox>
        <Button Margin="250,15,250,0">Iniciar sesión </Button>
    </StackPanel> 
</Window>
